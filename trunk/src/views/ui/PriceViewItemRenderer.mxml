<?xml version="1.0" encoding="utf-8"?>

<!-- Визуализатор ресурса для компонента, отображающего цену -->

<s:DataRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark"
				width="100%">
	<s:layout>
		<s:HorizontalLayout gap="5" verticalAlign="bottom"/>
	</s:layout>
	
	<s:Label text="{_name}" width="50%" textAlign="right" fontSize="12"/>
	<s:Label text="{_count}" width="50%" fontSize="12" fontWeight="bold"/>
	
	<fx:Declarations>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import dictionary.Resource;
			import dictionary.ResourcesDict;
			
			import vo.ResourceVO;
			
			//--------------------------------------------------------------------------
			// 
			//--------------------------------------------------------------------------
			
			[Bindable]
			private var _name:String;
			
			[Bindable]
			private var _count:int;
			
			//--------------------------------------------------------------------------
			// 
			//--------------------------------------------------------------------------
			
			override public function set data(value:Object):void
			{
				super.data = value;
				
				var resourceVO:ResourceVO = data as ResourceVO;
				if (resourceVO)
				{
					_count = resourceVO.resourceCount;
					
					var resource:Resource = ResourcesDict.getInstance().getResource(resourceVO.resourceId);
					_name = (resource ? resource.name : "???") + ":";
				}
			}
		]]>
	</fx:Script>
</s:DataRenderer>
