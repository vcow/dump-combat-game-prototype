<?xml version="1.0" encoding="utf-8"?>
<!-- Список внутриигровых триггеров -->
<triggers>
	<!-- Описание триггера содержит следующие параметры:
		id={числовое значение} - уникальный идентификатор триггера
		name={строковое значение} - уникальное имя триггера
		computable=["true","false"] - признак вычислимого триггера, значение которого расчитывается
		на основании текущего состояния, не может быть изменен, не сохраняется в состояниях игры. -->
	<!-- Количество сотрудников указанной професии, количество всех сотрудников, если профессия не указана -->
	<triggerDesc id="1" name="employeesCount" computable="true"/>
	<!-- Количество ресурсов указанного типа, количество всех ресурсов, если тип не указан -->
	<triggerDesc id="2" name="resourcesCount" computable="true"/>
</triggers>