<?xml version="1.0" encoding="utf-8"?>
<!-- Список внутриигровых триггеров -->
<triggersDict>
	<!-- Описание триггера содержит следующие параметры:
		id={строковое значение} - уникальный идентификатор триггера
		computable=["true","false"] - признак вычислимого триггера, значение которого расчитывается
		на основании текущего состояния, не может быть изменен, не сохраняется в состояниях игры. -->
	<!-- Количество сотрудников указанной професии, количество всех сотрудников, если профессия не указана -->
	<triggerDesc id="employeesCount" computable="true"/>
	<!-- Количество ресурсов указанного типа, количество всех ресурсов, если тип не указан -->
	<triggerDesc id="resourcesCount" computable="true"/>
	<!-- Количество баз у игрока -->
	<triggerDesc id="basesCount" computable="true"/>
	<!-- Баз захвачено -->
	<triggerDesc id="capturedBases"/>
	<!-- Баз потеряно -->
	<triggerDesc id="lostBases"/>
	<!-- Исследование палки завершено -->
	<triggerDesc id="cudgelResearchComplete"/>
	<!-- Исследование гвоздя завершено -->
	<triggerDesc id="nailResearchComplete"/>
	<!-- Исследование палицы завершено -->
	<triggerDesc id="maceResearchComplete"/>
	<!-- Найдена палка -->
	<triggerDesc id="foundCudgel"/>
	<!-- Найден гвоздь -->
	<triggerDesc id="foundNail"/>
	<!-- Найден картон -->
	<triggerDesc id="foundCardboard"/>
	<!-- Исследование картона завершено -->
	<triggerDesc id="cardboardResearchComplete"/>
	<!-- Найдена веревка -->
	<triggerDesc id="foundRope"/>
	<!-- Исследование веревки завершено -->
	<triggerDesc id="ropeResearchComplete"/>
	<!-- Исследование лука завершено -->
	<triggerDesc id="bowResearchComplete"/>
	<!-- Исследование стрелы завершено -->
	<triggerDesc id="arrowResearchComplete"/>
	<!-- Исследование стрелы с железным наконечником завершено -->
	<triggerDesc id="arrowTippedResearchComplete"/>
	<!-- Найдена кожа -->
	<triggerDesc id="foundSkin"/>
	<!-- Исследование кожи завершено -->
	<triggerDesc id="skinResearchComplete"/>
	<!-- Найдена бутылка -->
	<triggerDesc id="foundBottle"/>
	<!-- Исследование бутылки завершено -->
	<triggerDesc id="bottleResearchComplete"/>
</triggersDict>