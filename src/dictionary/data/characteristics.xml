<?xml version="1.0" encoding="utf-8"?>
<characteristics>
	<!-- Профессии -->
	<professions>
		<professionDesc name="{prof.laborer}" id="1"/>
		<professionDesc name="{prof.solgier}" id="2"/>
		<professionDesc name="{prof.scientist}" id="3"/>
		<professionDesc name="{prof.engineer}" id="4"/>
	</professions>
	<!-- Скилы персонажа -->
	<skills>
		<skillDesc name="{skill.strength}" id="1"/>
		<skillDesc name="{skill.stamina}" id="2"/>
		<skillDesc name="{skill.agility}" id="3"/>
		<skillDesc name="{skill.intellect}" id="4"/>
	</skills>
	<!-- Влияние профессии на скилы в единицу времени -->
	<dependencies>
		<dependence profession="1" interval="1m30s">
			<progress skill="1" value="0.3"/>
			<progress skill="2" value="0.1"/>
		</dependence>
		<dependence profession="2" interval="1m30s">
			<progress skill="1" value="0.2"/>
			<progress skill="2" value="0.2"/>
			<progress skill="3" value="0.1"/>
		</dependence>
		<dependence profession="3" interval="1m30s">
			<progress skill="3" value="0.1"/>
			<progress skill="4" value="0.4"/>
		</dependence>
		<dependence profession="4" interval="1m30s">
			<progress skill="3" value="0.2"/>
			<progress skill="4" value="0.1"/>
		</dependence>
	</dependencies>
</characteristics>