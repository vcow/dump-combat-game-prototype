<?xml version="1.0" encoding="utf-8"?>
<professionsDict>
	<!-- Профессия может иметь следующие параметры:
		name={строковое значение} - название представителя профессии
		category={строковое значение} - название профессии (группы рабочих, принадлежащих профессии)
		id={числовое значение} - уникальный идентификатор професии
		Может содержать в качестве дочерних объектов стоимость найма (details="price") и зарплату (details="fee")
		работника этой професии. Зарплата, чтобы быть функциональной, должна содержать событие, по которому она будет
		выплачиваться. -->
	<professionDesc name="{prof.laborer}" category="{personnel.cat.laborers}" id="1">
		<price details="price">
			<resource id="2" count="5"/>
		</price>
		<price details="fee" event="5sec">
			<resource id="2" count="-1"/>
		</price>
	</professionDesc>
	<professionDesc name="{prof.solgier}" category="{personnel.cat.soldiers}" id="2">
		<price details="price">
			<resource id="2" count="10"/>
		</price>
		<price details="fee" event="payDay">
			<resource id="2" count="1"/>
		</price>
	</professionDesc>
	<professionDesc name="{prof.scientist}" category="{personnel.cat.scientists}" id="3">
		<price details="price">
			<resource id="2" count="10"/>
		</price>
		<price details="fee" event="payDay">
			<resource id="2" count="1"/>
		</price>
	</professionDesc>
	<professionDesc name="{prof.engineer}" category="{personnel.cat.engineers}" id="4">
		<price details="price">
			<resource id="2" count="10"/>
		</price>
		<price details="fee" event="payDay">
			<resource id="2" count="1"/>
		</price>
	</professionDesc>
</professionsDict>
