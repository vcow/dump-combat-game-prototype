<?xml version="1.0" encoding="utf-8"?>
<modulesDict>
	<!-- Описание типа модуля содержит следующие параметры:
		id={числовое значение} - уникальный идентификатор типа модуля
		name={строковое значение} - наименование модуля
		description={строковое значение} - описание модуля
		space={числовое значение} - вместимость модуля
		chance={дробное значение от 1.0 до 0.0} - вероятность сохранения модуля при захвате базы
		Может содержать две цены - цену постройки модуля и цену обслуживания модуля -->
	<!-- Жилой модуль -->
	<moduleDesc id="1" name="{housing.title}" description="{housing.description}" space="25" chance="0.3">
		<price details="price">
			<resource id="2" count="100"/>
		</price>
		<price details="fee" event="min">
			<resource id="2" count="1"/>
		</price>
	</moduleDesc>
	<!-- Складской модуль -->
	<moduleDesc id="2" name="{store.title}" description="{store.description}" space="500" chance="0.2">
		<price details="price">
			<resource id="2" count="150"/>
		</price>
		<price details="fee" event="min">
			<resource id="2" count="1"/>
		</price>
	</moduleDesc>
</modulesDict>