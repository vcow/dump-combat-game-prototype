<?xml version="1.0" encoding="utf-8"?>
<modulesDict>
	<!-- Описание типа модуля содержит следующие параметры:
		id={строковое значение} - уникальный идентификатор типа модуля
		name={строковое значение} - наименование модуля
		description={строковое значение} - описание модуля
		space={числовое значение} - вместимость модуля
		chance={дробное значение от 1.0 до 0.0} - вероятность сохранения модуля при захвате базы
		Может содержать две цены - цену постройки модуля и цену обслуживания модуля -->
	<!-- Жилой модуль -->
	<moduleDesc id="housing" name="{housing.title}" description="{housing.description}" space="25" chance="0.3">
		<price details="price">
			<resource id="food" count="100"/>
		</price>
		<price details="fee" event="min">
			<resource id="food" count="1"/>
		</price>
		<!-- Время создания содержит следующие параметры:
			time=[{количество милисекунд},{время в формате ##h##m##s}] - время
			event={строковое значение} - внутриигровое событие, которое генерируется по завершению таймера
			notification={строковое значение} - нотификация, которая отправляется по завершению таймера
			Может содержать дополнительные параметры для нотификации -->
		<leadTime time="30s" event="constructionCompleted"/>
	</moduleDesc>
	<!-- Складской модуль -->
	<moduleDesc id="store" name="{store.title}" description="{store.description}" space="500" chance="0.4">
		<price details="price">
			<resource id="food" count="150"/>
		</price>
		<price details="fee" event="min">
			<resource id="food" count="1"/>
		</price>
		<leadTime time="10s" event="constructionCompleted"/>
	</moduleDesc>
	<!-- Лаборатория -->
	<moduleDesc id="lab" name="{lab.title}" description="{lab.description}" space="15" chance="0.1">
		<price details="price">
			<resource id="food" count="200"/>
		</price>
		<price details="fee" event="min">
			<resource id="food" count="5"/>
		</price>
		<leadTime time="1m" event="constructionCompleted"/>
	</moduleDesc>
	<!-- Мастерская -->
	<moduleDesc id="workshop" name="{workshop.title}" description="{workshop.description}" space="10" chance="0.3">
		<price details="price">
			<resource id="food" count="170"/>
		</price>
		<price details="fee" event="min">
			<resource id="food" count="3"/>
		</price>
		<leadTime time="30s" event="constructionCompleted"/>
	</moduleDesc>
</modulesDict>