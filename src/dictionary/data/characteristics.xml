<?xml version="1.0" encoding="utf-8"?>
<characteristics>
	<!-- Профессии -->
	<professions>
		<professionDesc name="{prof.laborer}" category="{personnel.cat.laborers}" id="1">
			<price details="price">
				<resource id="2" count="5"/>
			</price>
			<price details="fee" event="sec">
				<resource id="2" count="-1"/>
			</price>
		</professionDesc>
		<professionDesc name="{prof.solgier}" category="{personnel.cat.soldiers}" id="2">
			<price details="price">
				<resource id="2" count="10"/>
			</price>
			<price details="fee" event="payDay">
				<resource id="2" count="1"/>
			</price>
		</professionDesc>
		<professionDesc name="{prof.scientist}" category="{personnel.cat.scientists}" id="3">
			<price details="price">
				<resource id="2" count="10"/>
			</price>
			<price details="fee" event="payDay">
				<resource id="2" count="1"/>
			</price>
		</professionDesc>
		<professionDesc name="{prof.engineer}" category="{personnel.cat.engineers}" id="4">
			<price details="price">
				<resource id="2" count="10"/>
			</price>
			<price details="fee" event="payDay">
				<resource id="2" count="1"/>
			</price>
		</professionDesc>
	</professions>
	<!-- Скилы персонажа -->
	<skills>
		<skillDesc name="{skill.strength}" id="1"/>
		<skillDesc name="{skill.stamina}" id="2"/>
		<skillDesc name="{skill.agility}" id="3"/>
		<skillDesc name="{skill.intellect}" id="4"/>
	</skills>
	<!-- Влияние профессии на скилы -->
	<dependencies>
		<dependence profession="1" event="artifactFound">
			<progress skill="1" value="0.3"/>
			<progress skill="2" value="0.1"/>
		</dependence>
		<dependence profession="2" event="battleComplete">
			<progress skill="1" value="0.2"/>
			<progress skill="2" value="0.2"/>
			<progress skill="3" value="0.1"/>
		</dependence>
		<dependence profession="3" event="reseachCompleted">
			<progress skill="3" value="0.1"/>
			<progress skill="4" value="0.4"/>
		</dependence>
		<dependence profession="4" event="productionCompleted">
			<progress skill="3" value="0.2"/>
			<progress skill="4" value="0.1"/>
		</dependence>
	</dependencies>
</characteristics>