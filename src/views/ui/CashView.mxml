<?xml version="1.0" encoding="utf-8"?>

<!-- Компонент для показа количества еды -->

<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 verticalAlign="middle">
	
	<s:BitmapImage source="@Embed('icon/cash_icon.jpg')" width="24" height="24"/>
	
	<s:Label text="{count}" fontWeight="bold" minWidth="50"/>
	
	<fx:Declarations>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			//--------------------------------------------------------------------------
			// 
			//--------------------------------------------------------------------------
			
			[Bindable]
			public var count:uint = 0;
			
			//--------------------------------------------------------------------------
			// 
			//--------------------------------------------------------------------------
		]]>
	</fx:Script>
</s:HGroup>
